<script>
    function getTopics() {
        $.ajax({
            url: 'http://119.29.21.22:8082/topic/alltopic',
            type: 'GET',
        })
            .done(function (data) {
                if (data.code === 0) {
                    console.dir(data)
                    makeTopics(data.topics)
                } else {
                    alert('获取topics出错了')
                }

            })
            .fail(function (data) {
                alert('系统异常')
            })

    }
    function makeTopics(topics) {
        let html = ` <table class="am-table am-table-bd am-table-striped admin-content-table">
            <thead>
            <tr>
               <th>ID</th><th>用户名</th><th>提问标题</th><th>回答数</th><th>问题的课程标签</th>
            </tr>
            </thead>
            <tbody>`
        $.each(topics, function (i, topic) {

            let str = topic.creator
            str = str.split(',')[1].trim()
            str = str.split(' ')[1].replace(/'/g, "")
            html += ` <tr>
              <td>${i + 1}</td>
              <td>${str}</td>
              <td><a href="#">${topic.title}</a></td> 
              <td><span class="am-badge am-badge-danger">${topic.replyList.length}</span></td>
               <td> ${topic.courseTag}</td>
            </tr>`
        })

        html += ' </tbody></table>'
        $('.am-u-sm-12.table-am').append(html)
    }


    $(document).ready(function () {
        getTopics()
    })

</script>